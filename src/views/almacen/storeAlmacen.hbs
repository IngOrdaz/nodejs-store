              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="" class="btn btn-success btn-block"><i class="fas fa-eye"></i></a>
                </div>
                <a href="" class="btn btn-warning btn-block"><i class="fas fa-shopping-cart"></i></a>
              </div>
            </div>
          </div>
        </div>
        {{else}}
              <div class="col-md-3">
